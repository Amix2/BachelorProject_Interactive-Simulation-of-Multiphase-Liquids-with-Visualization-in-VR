{
    "bindings": {
        "/actions/sph": {
            "poses": [
                {
                    "output": "/actions/sph/in/hand_left",
                    "path": "/user/hand/left/pose/raw"
                },
                {
                    "output": "/actions/sph/in/hand_right",
                    "path": "/user/hand/right/pose/raw"
                }
            ],
            "haptics": [
                {
                    "output": "/actions/sph/out/haptic_right",
                    "path": "/user/hand/right/output/haptic"
                },
                {
                    "output": "/actions/sph/out/haptic_left",
                    "path": "/user/hand/left/output/haptic"
                }
            ],
            "sources": [
                {
                    "inputs": {
                        "click": {
                            "output": "/actions/sph/in/showmenu"
                        }
                    },
                    "mode": "button",
                    "path": "/user/hand/right/input/application_menu"
                },
            ]
        }
    },
    "controller_type": "vive_controller",
    "description": "SPH simulation bindings for Vive controllers",
    "name": "SPH simulation bindings for Vive controllers"
}